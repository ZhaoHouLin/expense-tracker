<form action="/records" method="POST">
  <div class="add">
    <h1>請輸入您的支出</h1><span>*必填</span>
    <div class="addGroup">
      <label for="name">名稱*:</label>
      <input type="text" placeholder="name" name="name" required="required" />
    </div>
    <div class="addGroup">
      <label for="date">日期*:</label>
      <input type="date" placeholder="date" name="date" required="required" />
    </div>
    <div class="addGroup">
      <label for="category">類別*:</label>
      <select name="category" required="required">
        <option value="">類別</option>
        <option value="家居物業 ">家居物業 </option>
        <option value="交通出行">交通出行</option>
        <option value="休閒娛樂">休閒娛樂 </option>
        <option value="餐飲食品">餐飲食品</option>
        <option value="其他">其他</option>
      </select>
    </div>
    <div class="addGroup">
      <label for="amount">金額*:</label>
      <input type="text" placeholder="amount" name="amount" required="required" />
    </div>
    <button type="submit">新增支出</button>
  </div>
</form>